doctype html
html
  head
    / meta content="text/html; charset=UTF-8" http-equiv="Content-Type"
    meta content="width=device-width,initial-scale=1" name="viewport"
    - page_title = "bashtetikn:#{controller.controller_name}"
    - page_title += "(#{Rails.env})" unless Rails.env.production?
    title= page_title
    = csrf_meta_tags
    = csp_meta_tag
    
    / Copied from: https://fontawesome.com/account/cdn
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

    = stylesheet_link_tag 'application', 'data-turbol-track': 'reload'
    = javascript_importmap_tags
    
  body
    header
      nav.top-bar
        ul.menu
          =foundation_menu_list_item "Home", root_path
          =foundation_menu_list_item "Websites", websites_path
          =foundation_menu_list_item "Webpages", webpages_path
          =foundation_menu_list_item "PageScans", page_scans_path
          - unless Rails.env.production?
            li.menu-text.environment= "(#{Rails.env})"
      div#flash_messages(data={turbolinks: false})
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")

    .main
      = yield
